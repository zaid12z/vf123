<%- include('../layout/header') %>

<main class="max-w-7xl mx-auto px-4 py-12">
    <section class="mb-16">
        <div class="text-center mb-16 fade-in">
            <h1 class="text-5xl font-bold mb-4 bg-gradient-to-r from-black to-gray-700 bg-clip-text text-transparent">
                <%= category %>
            </h1>
            <p class="text-xl text-gray-600">Discover our premium software solutions</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% products.forEach((product, index) => { %>
                <div class="product-card bg-white rounded-lg shadow-md overflow-hidden" 
                     style="animation-delay: <%= 0.1 * index %>s">
                    <div class="product-image-container">
                        <img src="<%= product.image_url %>" 
                             alt="<%= product.name %>" 
                             class="product-image w-full h-56 object-cover">
                        <% if (product.price === 0) { %>
                            <span class="absolute top-4 right-4 bg-green-500 text-white px-4 py-1 rounded-full text-sm font-medium">
                                Free
                            </span>
                        <% } %>
                    </div>
                    <div class="p-6">
                        <h3 class="text-xl font-bold mb-2"><%= product.name %></h3>
                        <p class="text-gray-600 mb-4"><%= product.description %></p>
                        
                        <% if (Array.isArray(product.features) && product.features.length > 0) { %>
                            <div class="space-y-2 mb-4">
                                <% product.features.forEach(feature => { %>
                                    <div class="flex items-center text-gray-700">
                                        <svg class="h-5 w-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                        </svg>
                                        <%= feature %>
                                    </div>
                                <% }) %>
                            </div>
                        <% } %>

                        <div class="flex justify-between items-center mt-6">
                            <% if (product.price > 0) { %>
                                <span class="text-2xl font-bold text-blue-600">$<%= Number(product.price).toFixed(2) %></span>
                                <button onclick="window.cartActions.addToCart(<%= JSON.stringify(product) %>)" 
                                        class="bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600 transition-colors">
                                    Add to Cart
                                </button>
                            <% } else { %>
                                <button class="w-full bg-green-500 text-white px-6 py-2 rounded-lg hover:bg-green-600 transition-colors">
                                    Download Now
                                </button>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </section>
</main>

<%- include('../layout/footer') %>